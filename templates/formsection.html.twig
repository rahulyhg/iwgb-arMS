{#
	fields: array of field data conformant to field.schema.json
#}

{% for field in fields %}
	{% if field.type == 'text' or field.type == 'numeric' or field.type == 'email' or field.type == 'tel' or field.type == 'date' %}
		<input type="{{ field.type }}"
			   name="{{ field.name }}"
			   placeholder="{{ _(field.display) }}"
				{% if field.autocomplete is defined %}
					autocomplete="{{ field.autocomplete }}"
				{% endif %}
				{% if field.required %} required {% endif %}>

	{% elseif field.type == 'label' %}
		<p>{{ _(field.display) }}</p>

	{% elseif field.type == 'label-md' %}
		{% autoescape false %}
			<p>{{ _(field.display)|htmlentities|md }}</p>
		{% endautoescape %}

	{% elseif field.type == 'select' %}
		<label>
			{{ _(field.display) }}
			<select name="{{ field.name }}">
				{% if not field.required %}
					<option value="did-not-supply"></option>
				{% endif %}
				{% for option in field.options %}
					<option value="{{ option.name }}">
						{{ _(option.display) }}
					</option>
				{% endfor %}
			</select>
		</label>

	{% elseif field.type == 'textarea' %}
		<textarea rows="{{ field.size }}"
				  name="{{ field.name }}"
				  placeholder="{{ _(field.display) }}"
				{% if field.required %} required {% endif %}
		</textarea>

	{% elseif field.type == 'checkbox' %}
		<label>
			<input type="checkbox"
				name="{{ field.name }}"
				{% if field.required %} required {% endif %}>
			{{ _(field.display) }}
		</label>
	{% endif %}
{% endfor %}