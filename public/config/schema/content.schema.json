{
    "$schema:": "http://json-schema.org/draft-07/schema#",
    "$id": "https://iwgb.org.uk/config/schema/content.schema.json",
    "title": "Content",
    "description": "A translated copy element",
    "type": "object",
    "additionalProperties": false,
    "definitions": {
        "content": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "en": {
                    "description": "English - languages left blank will default to this",
                    "type": "string"
                },
                "es": {
                    "description": "Spanish",
                    "type": "string"
                }
            },
            "required": ["en"]
        },
        "content-md": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "en": {
                    "description": "English - languages left blank will default to this",
                    "type": "string",
                    "format": "markdown"
                },
                "es": {
                    "description": "Spanish",
                    "type": "string",
                    "format": "markdown"
                }
            },
            "required": ["en"]
        }
    }
}