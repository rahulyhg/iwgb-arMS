{
  "$schema:": "http://json-schema.org/draft-07/schema#",
  "$id": "https://iwgb.org.uk/config/schema/form.schema.json",
  "title": "Branch",
  "description": "Sets out the fields and layout of a form",
  "type": "object",
  "additionalProperties": false,
  "definitions": {
    "section": {
      "type": "object",
      "additionalProperties": false,
      "oneOf": [
        {
          "properties": {
            "name": {
              "description": "This section's name, with no spaces or capitals",
              "type": "string",
              "pattern": "^[a-z\\-]+$"
            },
            "display": {
              "description": "How this section's name displays",
              "type": "object",
              "$ref": "content.schema.json#/definitions/content"
            },
            "kind": {
              "type": "string",
              "enum": [
                "inline"
              ]
            },
            "fields": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/line"
              }
            }
          },
          "required": [
            "name",
            "display",
            "kind",
            "fields"
          ]
        },
        {
          "properties": {
            "name": {
              "description": "This section's name, with no spaces or capitals",
              "type": "string",
              "pattern": "^[a-z\\-]+$"
            },
            "display": {
              "description": "How this section's name displays",
              "type": "string"
            },
            "kind": {
              "type": "string",
              "enum": [
                "vertical"
              ]
            },
            "fields": {
              "type": "array",
              "minItems": 1,
              "items": {
                "$ref": "field.schema.json#/definitions/field"
              }
            }
          },
          "required": [
            "name",
            "display",
            "kind",
            "fields"
          ]
        }
      ]
    },
    "line": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "field.schema.json#/definitions/field"
      }
    },
    "form": {
      "properties": {
        "name": {
          "description": "This form's name, with no spaces or capitals",
          "type": "string",
          "pattern": "^[a-z\\-]+$"
        },
        "display": {
          "description": "How this form's name displays",
          "type": "string"
        },
        "sections": {
          "description": "A section of the form, focusing on one aspect or topic",
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/section"
          }
        }
      },
      "required": [
        "name",
        "display",
        "sections"
      ]
    }
  }
}