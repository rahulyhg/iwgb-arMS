{% extends '/auth/auth.html.twig' %}

{% block head %}
    <title>Reset password &middot; IWGB</title>
{% endblock %}

{% block content %}
    <div class="verify">
        <div class="message">
            <p class="message__header">Reset your password</p>
            <p class="message__body">{{ user.getEmail() }}</p>
            <p class="message__body">You've successfully verified your identity. Enter your new password below.</p>
        </div>

        <form class="form" method="post" action="/auth/login/official/reset/{{ event.getId() }}">
            {% include 'csrf.html.twig' %}
            <input name="secret" type="hidden" value="{{ event.getData() }}">
            <div class="form__group">
                <span class="form__group__line">
                    <input class="form__input form__input--attachRight" name="pass" type="password" placeholder="&#9679;&#9679;&#9679;&#9679;&#9679;&#9679;" required><input class="form__input form__input__submit form__input--attachLeft" type="submit" value="Reset">
                </span>
            </div>
        </form>
    </div>
{% endblock %}