{% extends '/auth/auth.html.twig' %}

{% block head %}
    <title>Log in &middot; IWGB</title>
{% endblock %}

{% block content %}
    <div class="login">
        <div class="message">
            <p class="message__header">Log in to the IWGB</p>
            <p class="message__body">Enter the phone number associated with your union membership to log in.</p>
        </div>
        <form class="form" method="post" action="/auth/login/member?callback={{ _get.callback }}">
            {% include 'csrf.html.twig' %}
            <span>
                <input class="form__input form__input--attachRight" name="phone" placeholder="Phone number" required><input class="form__input form__input__submit form__input--attachLeft" type="submit" value="Log in">
            </span>
        </form>
        <div class="message">
            <p class="message__body message--small"><a class="message__action" href="/auth/login/official?callback={{ _get.callback }}">I am an IWGB official</a></p>
        </div>
    </div>
{% endblock %}