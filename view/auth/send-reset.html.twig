{% extends '/auth/auth.html.twig' %}

{% block head %}
    <title>Reset password &middot; IWGB</title>
{% endblock %}

{% block content %}
    <div class="verify">
        <div class="message">
            <p class="message__header">Reset your password</p>
            <p class="message__body">If you've forgotten your password, enter your account email here to reset it.</p>
        </div>

        <form class="form" method="post" action="/auth/login/official/reset/request">
            {% include 'csrf.html.twig' %}
            <div class="form__group">
                <span class="form__group__line">
                    <input class="form__input form__input--attachRight" name="email" placeholder="Email" autocomplete="email" required autofocus><input class="form__input form__input__submit form__input--attachLeft" type="submit" value="Reset">
                </span>
            </div>
        </form>
    </div>
{% endblock %}